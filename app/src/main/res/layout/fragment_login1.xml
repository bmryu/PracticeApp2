<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <org.adroidtown.practiceapp.CustomButton
            android:id="@+id/kakaoButton"
            style="@style/ButtonStyle"
            app:imageSource="@drawable/kakao"
            app:text="카카오톡으로 시작하기"
            android:background="#F6DC09"
            app:textColor="#000000"
            />
        <org.adroidtown.practiceapp.CustomButton
            android:id="@+id/facebookButton"
            app:text="페이스북으로 시작하기"
            app:imageSource="@drawable/facebook"
            style="@style/ButtonStyle"
            android:layout_marginTop="10dp"
            android:background="#4165B0"
            app:textColor="#ffffff"/>
        <org.adroidtown.practiceapp.CustomButton
            android:id="@+id/naverButton"
            style="@style/ButtonStyle"
            app:text="네이버로 시작하기"
            app:imageSource="@drawable/naver"
            android:layout_marginTop="10dp"
            android:background="#03BF35"
            app:textColor="#ffffff"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            />
    </LinearLayout>
</LinearLayout>